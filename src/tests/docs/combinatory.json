{
    "openapi": "3.0.0",
    "info": {
      "title": "Simple API overview",
      "version": "1.0"
    },
    "paths": {
        "/tests/allOf-unique": {
            "post": {
                "operationId": "combinatory",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/MatchingParameters"
                            }
                        }
                    },
                    "required": true
                }
            }
        },
        "/tests/allOf-multiple": {
            "post": {
                "operationId": "combinatory",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/MultipleAllOf"
                            }
                        }
                    },
                    "required": true
                }
            }
        }
    },
    
    "components": {
        "schemas": {
            "MatchingParameters": {
                "title": "ImageMatchingParameters",
                "type": "object",
                "required": ["matching_parameters"],
                "properties": {
                    "match_colors_with": {
                        "allOf": [{
                            "$ref": "#/components/schemas/Match"
                        }],
                        "default": 2
                    }
                }
            },
            "Match": {
                "title": "Match",
                "enum": [0, 1, 2, 3],
                "type": "integer",
                "description": "An enumeration."
            },


            "MultipleAllOf": {
                "title": "ImageMatchingParameters",
                "type": "object",
                "required": ["matching_parameters"],
                "properties": {
                    "match_colors_with": {
                        "allOf": [{
                            "$ref": "#/components/schemas/Cat"
                        },{
                            "$ref": "#/components/schemas/Dog"
                        }]
                    }
                }
            },
            "Cat": {
                "type": "object",
                "required": ["name", "age", "evil"],
                "properties": {
                    "name": {
                        "type": "string",
                        "exclusiveMinimum": 1
                    },
                    "age": {
                        "type": "integer",
                        "minimum": 0,
                        "format": "int32"
                    },
                    "evil": {
                        "type": "boolean"
                    }
                }
            },
            "Dog": {
                "type": "object",
                "required": ["name", "age", "goodboi"],
                "properties": {
                    "name": {
                        "type": "string",
                        "exclusiveMinimum": 1
                    },
                    "age": {
                        "type": "integer",
                        "minimum": 0,
                        "format": "int32"
                    },
                    "goodboi": {
                        "type": "boolean"
                    }
                }
            }
        }
    }
}